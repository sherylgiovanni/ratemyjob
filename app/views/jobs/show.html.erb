<div class="px-4 container-fluid">
    <div class="pricing-header px-3 pb-md-4 mx-auto text-center">
    <h1 class="display-4">View Job</h1>
    <div class="px-4 py-4 mx-auto">
        <%= render @job %>
    </div>
    <p>
        <%= link_to "Edit Job", edit_job_path(@job) %> | <%= link_to "All Jobs", jobs_path %>
        <%= button_to "Delete Job", @task, method: :delete, class: 'btn btn-secondary', form: {
                data: {
                    turbo_confirm: "Are you sure you want to delete this job?"
                }
            }
        %>
    </p>
    </div>
</div>