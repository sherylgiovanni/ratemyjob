<% title "Login" %>

<%= bootstrap_form_with(url: sessions_path, method: :post) do |f| %>
  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.primary 'Login' %>
<% end %>

<%= button_to "Login with Github", "/auth/github", class: "btn btn-primary", data: { turbo: false } %>